<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/secondary_background">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="13dp"
            app:cardElevation="0dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/EventsRecyclerViewEventImage"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:contentDescription="eventImage" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/EventsRecyclerViewEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EventsRecyclerViewEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white2" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>