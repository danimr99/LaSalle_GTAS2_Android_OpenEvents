<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.fragments.EventDetailsFragment"
    android:requiresFadingEdge="vertical"
    android:fadingEdgeLength="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:id="@+id/event_details_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:src="@drawable/arrow_back_icon"
            android:contentDescription="@string/backArrowDescription">

        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/secondary_background">

            <ImageView
                android:id="@+id/event_details_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/eventImageDescription" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/event_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/event_details_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/broken_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/hyphen"
                android:textSize="17sp"
                android:textColor="@color/broken_white" />

            <TextView
                android:id="@+id/event_details_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/broken_white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/broken_grey"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="17sp"
            android:text="@string/eventDateTitle"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_details_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/broken_white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/hyphen"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/broken_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_details_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/broken_white"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:text="@string/eventTypeTitle"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_details_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/broken_white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:text="@string/eventNumberOfParticipantsTitle"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_details_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/broken_white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:text="@string/eventDescriptionTitle"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/broken_white"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/broken_grey"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"/>

        <TextView
            android:id="@+id/join_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/joinEventLabel"
            android:textColor="@color/clear_blue"
            app:drawableStartCompat="@drawable/calendar_icon"
            app:drawableTint="@color/clear_blue"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/leave_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/leaveEventLabel"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/leave_event_icon"
            android:drawablePadding="8dp"
            app:drawableTint="@color/red"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/edit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/editEventLabel"
            android:textColor="@color/clear_blue"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/edit_icon"
            android:drawablePadding="8dp"
            app:drawableTint="@color/clear_blue"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/delete_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/deleteEventLabel"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/delete_icon"
            android:drawablePadding="8dp"
            app:drawableTint="@color/red"
            android:visibility="gone"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/comment_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/commentEventLabel"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/clear_blue"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/add_comment_icon"
                    android:drawablePadding="10dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/rate_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/rateEventLabel"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/star_icon"
                    android:drawablePadding="8dp"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_details_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>

</ScrollView>