<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="16dp"
            android:text="@string/signUpTitle"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginStart="35dp"
            android:textColor="@color/black"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/emailTitleLogin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp" />
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/emailHintLogin"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:autofillHints=""
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/firstNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/firstName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp" />
        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/firstNameHint"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:autofillHints=""
            android:inputType="text" />

        <TextView
            android:id="@+id/lastNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/lastName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp" />
        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/lastNameHint"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:autofillHints=""
            android:inputType="text" />

        <TextView
            android:id="@+id/passwordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/passwordTitleLogin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            app:passwordToggleEnabled="true"
            app:boxBackgroundColor="@android:color/transparent"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/passwordHintLogin"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:autofillHints=""
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/repeatPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/repeatPasswordTitleLogin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            app:passwordToggleEnabled="true"
            app:boxBackgroundColor="@android:color/transparent"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/repeatPasswordInput"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/passwordHintLogin"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:autofillHints=""
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/createAccountTitle"
            android:backgroundTint="#FF0099CC"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"/>

    </LinearLayout>
</ScrollView>