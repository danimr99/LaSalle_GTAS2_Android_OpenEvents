<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:src="@drawable/open_events_logo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/openEventsLogoDescription" />

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/emailTitleLogin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="45dp" />
        <EditText
            android:id="@+id/email"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/emailHintLogin"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:inputType="textEmailAddress" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/passwordTitleLogin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/passwordHintLogin"
            android:textSize="20sp"
            android:autofillHints=""
            android:inputType="textPassword" />
        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/signInTitle"
            android:backgroundTint="#FF0099CC"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="60dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/notAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notAccountText"
                android:textSize="17sp"
                android:layout_marginRight="5sp"
                />

            <TextView
                android:id="@+id/notAccountButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notAccountButton"
                android:textSize="17sp"
                android:textStyle="bold"
                />
        </LinearLayout>
</LinearLayout>